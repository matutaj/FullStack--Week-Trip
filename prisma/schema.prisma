// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trip {
  id          String   @id @default(uuid())
  name        String
  location    String
  startDate   DateTime
  endDate     DateTime
  pricePerDay Decimal  @db.Decimal(8, 2)
  description String
  coverImge   String
  imagesUrl   String[]
  maxGuests   Int
  highlights  String[]
}
